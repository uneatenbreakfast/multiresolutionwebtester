{
  "compilerOptions": {
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "typeRoots": ["../node_modules/@types"]
}
